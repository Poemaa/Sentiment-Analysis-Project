@model IEnumerable<ProjektiSentimentAnalysis.Models.Feedback>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" style="color:#87CEEB">Create New</a>
</p>
<table class="table">
    <thead class="table-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Permbajtja)
            </th>
            <th type="date">
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instituti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fakulteti)
            </th>
            
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Permbajtja)
            </td>
            <td type="date">
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instituti.Emri)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fakulteti.Dega)
            </td>
                


            <td>
                    <a asp-action="Edit" asp-route-id="@item.FeedbackId" style="color:#87CEEB">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.FeedbackId" style="color:#87CEEB">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.FeedbackId" style="color:#87CEEB">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
