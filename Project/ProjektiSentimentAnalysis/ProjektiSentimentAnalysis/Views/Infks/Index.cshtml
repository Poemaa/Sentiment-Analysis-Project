@model IEnumerable<ProjektiSentimentAnalysis.Models.Infk>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" style="color:#87CEEB">Create New</a>
</p>
<table class="table">
    <thead class="table-info">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StatusiAkredititmit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VitiAkreditimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fakulteti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instituti)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusiAkredititmit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VitiAkreditimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fakulteti.Dega)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instituti.Emri)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.InfkId" style="color:#87CEEB">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.InfkId" style="color:#87CEEB">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.InfkId" style="color:#87CEEB">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
